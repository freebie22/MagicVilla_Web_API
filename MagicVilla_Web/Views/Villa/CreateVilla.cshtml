@using MagicVilla_Web.Models.DTO;
@model VillaCreateDTO

<form method="post" asp-action="CreateVilla">
    <div class="container p-3 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3 text-center" >Додати віллу</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label  asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label  asp-for="Details"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Details" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label  asp-for="Rate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Rate" class="form-control" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Occupancy"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Occupancy" class="form-control" />
                        <span asp-validation-for="Occupancy" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Sqft"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Sqft" class="form-control" />
                        <span asp-validation-for="Sqft" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ImageUrl"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Amenity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Amenity" class="form-control" />
                        <span asp-validation-for="Amenity" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col">
                <input type="submit" class="btn btn-info w-100" value="Додати" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success w-100">
                    <i class="fas fa-sign-out-alt"></i> До переліку
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}