@using MagicVilla_Web.Models.ViewModels;
@model VillaNumberCreateVM

<form method="post" asp-action="Create">
    <div class="container p-3 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3 text-center">Додати номер вілли</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VillaNumber.VillaNo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="VillaNumber.VillaNo" class="form-control" />
                        <span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VillaNumber.SpecialDetails"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="VillaNumber.SpecialDetails" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VillaNumber.VillaId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="VillaNumber.VillaId" class="form-select" asp-items="@Model.VillaList">
                            <option disabled selected>--Choose Villa for this number--</option>
                        </select>
                        <span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col">
                <input type="submit" class="btn btn-info w-100" value="Додати" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success w-100">
                    <i class="fas fa-sign-out-alt"></i> До переліку
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}