@using MagicVilla_Web.Models.DTO;
@model VillaNumberUpdateDTO

<form method="post" asp-action="Delete">
    <div class="container p-3 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3 text-center">Видалити номер вілли</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VillaNo"></label>
                    </div>
                    <div class="col-8">
                        <input readonly asp-for="VillaNo" class="form-control" />
                        <span asp-validation-for="VillaNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VillaId"></label>
                    </div>
                    <div class="col-8">
                        <input readonly asp-for="VillaId" class="form-control" />
                        <span asp-validation-for="VillaId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecialDetails"></label>
                    </div>
                    <div class="col-8">
                        <input readonly asp-for="SpecialDetails" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col">
                <input type="submit" class="btn btn-info w-100" value="Видалити" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success w-100">
                    <i class="fas fa-sign-out-alt"></i> До переліку
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}